<!-- res/layout/dialog_claim_ticket.xml -->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="24dp"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/spinner_background"
        >

        <TextView
            android:id="@+id/tvClaimMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Do you want to claim this ticket?"
            android:textSize="20sp"
            android:textColor="#DB6A16"
            android:layout_marginBottom="16dp"
           android:fontFamily="sans-serif-medium"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnClaim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Ticket"
            android:textColor="@color/white"
            android:backgroundTint="#FFAB00"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_gravity="center"
            android:textColor="@color/background_color"
            android:backgroundTint="#F63407"
            android:padding="12dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
