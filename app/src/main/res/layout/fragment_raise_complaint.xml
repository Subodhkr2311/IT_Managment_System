<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".RaiseComplaintFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Introduction Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/admin_edittext_corner"
            android:layout_marginBottom="16dp"
            >

            <!-- Introduction Title -->
            <TextView
                android:id="@+id/introduction_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to CivicConnect"
                android:textSize="22sp"
                android:textColor="#333333"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- Brief Introduction Text -->
            <TextView
                android:id="@+id/introduction_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This app empowers residents to report and track civic issues, ensuring timely responses and accountability. It enhances the quality of life and promotes environmental sustainability by addressing sanitation, sewage, waste management, and environmental hazards efficiently."
                android:textSize="16sp"
                android:textColor="#3F5FBA"
                android:layout_marginBottom="8dp"/>

            <!-- Image or Logo -->
            <ImageView
                android:id="@+id/app_logo"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:src="@drawable/itsupport"
            android:scaleType="centerInside"
            android:layout_gravity="center"/>
        </LinearLayout>

        <!-- Title for Complaint Section -->
        <TextView
            android:id="@+id/Pagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Raise Complaint / Request"
            android:textSize="24sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Location Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp"
                />

            <Spinner
                android:id="@+id/location_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/admin_edittext_corner"
                />
        </LinearLayout>

        <!-- Complaint Type Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Type"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/complaint_type_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/admin_edittext_corner"/>
        </LinearLayout>

        <!-- Complaint Title Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Title"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp"/>

            <Spinner
                android:id="@+id/complaint_title_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/admin_edittext_corner"/>

            <!-- Required Time Display -->
            <TextView
                android:id="@+id/required_time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#555555"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Description Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description (Optional)"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:id="@+id/description_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter description"
                android:minLines="3"
                android:background="@drawable/admin_edittext_corner"
                android:padding="12dp"/>
        </LinearLayout>

        <!-- Photo Upload Button -->
        <Button
            android:id="@+id/photo_upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Photo"
            android:shadowColor="@color/colorAccent"
            android:backgroundTint="#08A1FF"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="16dp"/>

        <!-- ImageView to display the selected image -->
        <ImageView
            android:id="@+id/image_preview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:visibility="gone" /> <!-- Initially hidden -->

        <TextView
            android:id="@+id/image_link_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" /> <!-- Add a placeholder background -->

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:shadowColor="@color/colorPrimary"
            android:backgroundTint="#304FFE"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</ScrollView>
