<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background_color"
    tools:context=".HomeExecutiveFragment">

    <!-- Header Image -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/leader"
    android:contentDescription="Header Image"
    android:layout_marginBottom="16dp"

    android:clipToOutline="true"/>

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Executive Dashboard"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFAB00"
        android:layout_gravity="center"
        android:paddingBottom="16dp"
        android:elevation="4dp"/>

    <!-- Availability Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Availability"
                android:textSize="20sp"
                android:textColor="#3E99D7"
                android:layout_marginBottom="8dp"/>

            <!-- Image for Availability -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/check"
            android:contentDescription="Availability Icon"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

            <ToggleButton
                android:id="@+id/toggleAvailability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOn="Available"
                android:textOff="Not Available"
                android:backgroundTint="@color/green"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Presence Section -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="12dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mark Presence"
                android:textSize="20sp"
                android:textColor="#3E99D7"
                android:layout_marginBottom="8dp"/>

            <!-- Image for Presence -->
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/beingthere"
            android:contentDescription="Presence Icon"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>

            <ToggleButton
                android:id="@+id/togglePresence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textOn="Present"
                android:textOff="Not Present"
                android:backgroundTint="@color/green"
                android:drawablePadding="10dp"
                android:padding="12dp"
                android:textColor="@android:color/white"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</LinearLayout>
